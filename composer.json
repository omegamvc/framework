{
    "name": "omegamvc/framework",
    "version": "1.0.0",
    "type": "library",
    "description": "OmegaFramework is a lightweight and modular PHP framework designed for building modern web applications following the MVC architecture. It is optimized for PHP 8+ and provides a simple, extensible foundation for rapid application development.",
    "homepage": "https://omegamvc.github.io",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Adriano Giovannini",
            "email": "agisoftt@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*",
        "php-di/php-di": "^7.0.11",
        "wixel/gump": "^v2.2.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13.2"
    },
    "autoload": {
        "psr-4": {
            "System\\": "src/System/",
        },
        "files": [
            "src/System/Collection/helper.php",
            "src/System/Support/helper.php",
            "src/System/Console/helper.php",
            "src/System/Text/helper.php",
            "src/System/Time/helper.php",
            "src/System/Validator/helper.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "scripts": {

    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
