{
    "name": "omegamvc/framework",
    "type": "library",
    "description": "OmegaFramework is a lightweight and modular PHP framework designed for building modern web applications following the MVC architecture. It is optimized for PHP 8+ and provides a simple, extensible foundation for rapid application development.",
    "homepage": "https://omegamvc.github.io",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Adriano Giovannini",
            "email": "agisoftt@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-apcu": "*",
        "ext-http": "*",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pcntl": "*",
        "ext-pdo": "*",
        "ext-posix": "*",
        "ext-readline": "*",
        "ext-simplexml": "*",
        "omegamvc/serializable-closure":  "^2.0.0",
        "omegamvc/validator": "^2.0.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13.4",
        "friendsofphp/php-cs-fixer": "^v3.87.2"
    },
    "autoload": {
        "psr-4": {
            "Omega\\": "src/Omega/"
        },
        "files": [
            "src/Omega/Collection/helper.php",
            "src/Omega/Console/helper.php",
            "src/Omega/Text/helper.php",
            "src/Omega/Time/helper.php",
            "src/Omega/Support/helper.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run --diff",
        "test:facade:update": "php ./bin/facade.php facade:update --from-file /resources/facades.php --debug",
        "test:facade:validate": "php ./bin/facade.php facade:validate --from-file /resources/facades.php --debug",
        "test:dev": [
            "@test:lint",
            "@test:facade:validate"
        ],
        "test": [
            "php-cs-fixer fix -v --dry-run",
            "php ./bin/facade.php facade:validate --from-file /resources/facades.php"
        ]
    },
    "suggest": {
		"ext-apache": "If you wanto to use apache extension"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
